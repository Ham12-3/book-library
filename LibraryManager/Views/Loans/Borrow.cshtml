@model LibraryManager.Models.ViewModels.BorrowViewModel

@{
    ViewData["Title"] = "Borrow Book";
}

<h1 class="mb-3">Borrow "@Model.BookTitle"</h1>

<div class="alert alert-info">
    <strong>Available copies:</strong> @Model.AvailableCopies
</div>

<form asp-action="Borrow" method="post" class="row g-3">
    <input type="hidden" asp-for="BookId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-12">
        <label asp-for="MemberId" class="form-label"></label>
        <select asp-for="MemberId" class="form-select" asp-items="Model.MemberOptions">
            <option value="">-- Select member --</option>
        </select>
        <span asp-validation-for="MemberId" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="BorrowedOn" class="form-label"></label>
        <input asp-for="BorrowedOn" class="form-control" />
        <span asp-validation-for="BorrowedOn" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="DueOn" class="form-label"></label>
        <input asp-for="DueOn" class="form-control" />
        <span asp-validation-for="DueOn" class="text-danger"></span>
    </div>

    <div class="col-12 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Confirm Borrow</button>
        <a asp-controller="Books" asp-action="Details" asp-route-id="@Model.BookId" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
