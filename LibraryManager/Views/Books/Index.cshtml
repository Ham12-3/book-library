@model IEnumerable<LibraryManager.Models.Book>

@{
    ViewData["Title"] = "Books";
    var searchTerm = ViewData["Query"]?.ToString() ?? string.Empty;
    var availableOnly = ViewData["AvailableOnly"] is bool flag && flag;
    var authorOptions = ViewData["Authors"] as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>());
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="mb-0">Books</h1>
    <a class="btn btn-primary" asp-action="Create">Add Book</a>
</div>

<form method="get" class="row g-3 mb-4">
    <div class="col-md-5">
        <label for="query" class="form-label">Search</label>
        <input id="query" name="query" class="form-control" placeholder="Title or ISBN" value="@searchTerm" />
    </div>
    <div class="col-md-4">
        <label for="authorId" class="form-label">Author</label>
        <select id="authorId" name="authorId" class="form-select" asp-items="authorOptions">
            <option value="">All authors</option>
        </select>
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="true" id="availableOnly" name="availableOnly" @(availableOnly ? "checked" : "") />
            <label class="form-check-label" for="availableOnly">
                Available only
            </label>
        </div>
    </div>
    <div class="col-md-1 d-flex align-items-end gap-2">
        <button type="submit" class="btn btn-outline-primary">Filter</button>
    </div>
    <div class="col-12">
        <a asp-action="Index" class="btn btn-link p-0">Reset filters</a>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No books matched your filters.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Cover</th>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Isbn)</th>
                <th>@Html.DisplayNameFor(model => model.Author)</th>
                <th>@Html.DisplayNameFor(model => model.PublishedOn)</th>
                <th>@Html.DisplayNameFor(model => model.AvailableCopies)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.CoverImagePath))
                    {
                        <img src="@item.CoverImagePath" alt="@item.Title cover" class="img-thumbnail" style="width: 60px; height: 90px; object-fit: cover;" />
                    }
                    else
                    {
                        <span class="text-muted small">No image</span>
                    }
                </td>
                <td>@item.Title</td>
                <td>@item.Isbn</td>
                <td>@item.Author?.FullName</td>
                <td>@item.PublishedOn?.ToShortDateString()</td>
                <td>
                    <span class="badge @(item.AvailableCopies > 0 ? "bg-success" : "bg-secondary")">
                        @item.AvailableCopies / @item.TotalCopies
                    </span>
                </td>
                <td class="text-nowrap">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    @if (item.AvailableCopies > 0)
                    {
                        <a class="btn btn-sm btn-success" asp-controller="Loans" asp-action="Borrow" asp-route-bookId="@item.Id">Borrow</a>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}
