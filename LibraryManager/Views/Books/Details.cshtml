@model LibraryManager.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    @if (!string.IsNullOrEmpty(Model.CoverImagePath))
    {
        <div class="mb-3">
            <img src="@Model.CoverImagePath" alt="@Model.Title cover" class="img-fluid rounded shadow-sm" style="max-height: 300px;" />
        </div>
    }
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Isbn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Isbn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PublishedOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublishedOn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalCopies)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalCopies)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AvailableCopies)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AvailableCopies)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author.FirstName)
        </dd>
    </dl>
</div>
<div class="d-flex flex-wrap gap-2">
    <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    @if (Model?.AvailableCopies > 0)
    {
        <a class="btn btn-primary" asp-controller="Loans" asp-action="Borrow" asp-route-bookId="@Model.Id">Borrow this book</a>
    }
    else
    {
        <button class="btn btn-secondary" type="button" disabled>No copies available</button>
    }
</div>
